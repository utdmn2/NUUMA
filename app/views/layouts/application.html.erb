<!DOCTYPE html>
<html>
  <head>
    <title>Nuuma</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+New:wght@300&display=swap" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg sticky-top text-light" >
        <div class="container">
          <%= link_to "NUUMA", root_path %>
          <div class="navbar navbar-dark">
            <div class="container d-flex justify-content-between">
              <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
          </div>
              <!--管理者側ログイン後メニュー-->
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_users_path, class: "nav-link text-light" do %>
                会員一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_posts_path, class: "nav-link text-light" do %>
                投稿一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_categories_path, class: "nav-link text-light" do %>
                カテゴリ一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, class: "nav-link text-light", method: :delete do %>
                ログアウト
                <% end %>
              </li>

              <!--会員側ログイン後メニュー-->
            <% elsif user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
                マイページ
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_post_path, class: "nav-link text-light" do %>
                投稿する
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to posts_path, class: "nav-link text-light" do %>
                投稿一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
                ログアウト
                <% end %>
              </li>

              <!-- 会員側ログイン前メニュー -->
            <% else %>
              <li class="nav-item">
                <%= link_to posts_path, class: "nav-link text-light" do %>
                投稿一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                新規会員登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "nav-link test-light" do %>
                ログイン
                <% end %>
              </li>
            <% end %>

            <!-- 検索窓　-->
            </ul>
            <form class="d-flex">
              <input class="ml-2 form-control me-2" type="search" placeholder="沼を検索" aria-label="Search">
              <button class="btn btn-outline-light ml-2" type="submit">
                <i class="fas fa-search">Search</i>
              </button>
            </form>
           </div>
         </div>
      </nav>
    </header>



    <div class="main">
      <div class="container">
        <div class"row">
          <%= yield %>
        </div>
      </div>
    </div>


    <!-- フッター -->
    <footer class="text-center">
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p class="pt-3" style="font-size:15px;">
              <%= link_to "投稿ルール", root_path, class: "text-white" %>
              <%= link_to "利用規約", guideline_path, class: "text-white" %>
              <%= link_to "プライバシーポリシー", privacy_path, class: "text-white" %>
            </p>
            <p style="font-size:12px;">Copyright ©NUUMA 2021 All Rights Reserved.</p>
          </div>
        </div>
      </div>

    </footer>
  </body>
</html>
