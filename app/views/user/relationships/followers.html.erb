<div class="row">
  <div class="col"></div>
    <div class="col-10">
      <h3 style="margin: 20px auto;">フォローされているユーザー</h3>
      <div class="container-fluid">
        <div class="row">
          <% if @users.exists? %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">ニックネーム</th>
                <th scope="col">自己紹介</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= truncate(user.introduction) %></td>
                <td><%= link_to "詳細",user_path(user.id), class: "btn btn-sm", style: "background-color: #90ee90; color: black;"%></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <% else %>
          <p>フォローされているユーザーはいません</p>
          <% end %>
        </div>
      </div>
    </div>
  <div class="col"></div>
</div>