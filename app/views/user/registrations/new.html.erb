<%= render 'homes/alert' %>
<div class="row">
  <div class="col"></div>
  <div class="col-8">
<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム, class: "mt-3 mr-5" %><br>
    <%= f.text_field :name, autofocus: true, placeholder: "ぬまぬし" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（８文字以上） %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <p><%= f.check_box :agreement, :as => :boolean, checked:false %>
      <%= link_to "利用規約", guideline_path %>と<%= link_to "プライバシーポリシー", privacy_path %> に同意する。</p>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  
<% end %>
</div>
</div>
<div class="col"></div>
</div>
<h4>すでに会員の方は
<%= link_to "こちら", new_user_session_path %>からログイン</h4>
