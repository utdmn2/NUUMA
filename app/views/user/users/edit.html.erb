<h1>マイページ</h1>

<%= form_with model:@user, local:true do |f| %>

  <label for="inputImage">プロフィール画像</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <label for="inputName">ニックネーム</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>

 <label for="inputIntroduction">自己紹介</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>

 <label for="inputBirthDate">誕生日</label>
  <%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
  <%= f.submit "プロフィールを更新する", class: "btn btn-success" %>
  <% end %>
  <%= link_to '退会する',unsubscribe_user_path,class:"btn btn-danger" %>