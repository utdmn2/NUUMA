 <% if post.favorited_by?(current_user) %>
        <%= link_to post_favorites_path(post.id), method: :delete, remote: true, style: "color: red;" do %>
        ♥<%= post.favorites.count %>
        <% end %>
   <% else %>
        <%= link_to post_favorites_path(post), method: :post, remote: true, style: "color: black;" do %>
        ♡<%= post.favorites.count %>
        <% end %>
  <% end %>