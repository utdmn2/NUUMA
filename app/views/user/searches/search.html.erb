<div class="row">
 <div class="col"></div>
 <div class="col-10">
   <% if @model == 'user' %>
	   <h3 style="margin: 20px auto;">ユーザー検索結果"<%= @content %>"</h3>
     <table class='table'>
      <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @records.each do |user| %>
       <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
       </tr>
       <% end %>
      </tbody>
     </table>
   <% elsif @model == 'post' %>
	   <h3>Books search for "<%= @content %>"</h3>
     <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
     <tbody>
     <% @records.each do |post| %>
      <tr>
        <td><%= link_to user_path(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: "50x50") %>
          <% end %>
        </td>
        <td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
    </tbody>
   </table>
  <% end %>
 </div>
 <div class="col"></div>
</div>