<h2>検索結果</h2>
<!--posts一覧 -->
<table class="table table-hover table-inverse">
　<% if @range == '2' %>
  <thead>
    <tr>
     <th></th>
     <th>タイトル</th>
     <th>投稿内容</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @post.each do |post| %>
     <tr>
      <td>
       <%= link_to(post.user) do %>
       <%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
       <% end %>
      </td>
      <td>
       <%= link_to post.title, , class: "post_#{post.id}" %>
      </td>
      <td><%= truncate(post.body) %></td>
     </tr>
     <% end %>
  </tbody>

    <% else %>
  <thead>
     <tr>
      <th></th>
      <th>ニックネーム</th>
      <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
    <% @user.each do |user| %>
     <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
      <td><%= user.name %></td>
      <td><%= link_to "詳細", user, class: "user_#{user.id}" %></td>
     </tr>
    <% end %>
   </tbody>
   <% end %>
 </table>