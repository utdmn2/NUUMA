<div class="shadow p-3 mb-5 bg-white rounded">
  <h1>新規投稿フォーム</h1>
    <%= form_with model: @post, local:true do |f| %>
      <h4>画像</h4>
      <%= f.attachment_field :image %>
      <h4>タイトル</h4>
      <%= f.text_field :title, placeholder: "〇〇沼" %>
      <h4>本文</h4>
      <%= f.text_area :body, pleceholder: "控えめに言って最高！" %>
    <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info" %>
    <% end %>
</div>
