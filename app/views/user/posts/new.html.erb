<div class="shadow p-3 mb-5 bg-white rounded">
  <h1>新規投稿フォーム</h1>
    <%= form_with model: @post, local:true do |f| %>
      <%= f.label :image, '画像' %>
      <%= f.attachment_field :image %>
      <%= f.label :body, 'タイトル' %>
      <%= f.text_field :title, placeholder: "〇〇沼" %>
      <%= f.label :category, 'カテゴリ' %>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
      <%= category.label do %>
      <%= category.check_box %>
      <%= category.text %>
      <% end %>
      <% end %>
      <h4>本文</h4>
      <%= f.text_area :body, pleceholder: "控えめに言って最高！" %>
    <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info" %>
    <% end %>
</div>
