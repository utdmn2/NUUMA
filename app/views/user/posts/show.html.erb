<div class="card w-50 mx-auto my-4">
  <div class="card-text m-2">
    <%= link_to user_path(@user) do %>
      <%= attachment_image_tag @post.user, :profile_image, fallback: "no_image.jpg", size: '50x50' %>
      <%= @user.name %>
    <% end %>

    <% if @post.user == current_user %>
      <%= link_to "記事編集", edit_post_path(@post.id), class: "btn btn-success btn-sm mx-2" %>
      <%= link_to "記事削除", post_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-dark btn-sm" %>
    <% end %>
  </div>

    <!--投稿画像-->
    <%= attachment_image_tag @post, :image, :fill, 300, 200 %>

    <!--投稿本文-->
    <div class="card-body">
      <div class="card-title">
        <h4><%= @post.title %></h4>
      </div>

      <%#= @post.category %>

      <div class="card-text my-2">
        <%= @post.body %>
      </div>

    <!--投稿日時・コメント数・いいねボタン-->

    <div style="text-align: right;">
      <span><%= @post.created_at.strftime('%Y/%m/%d') %>  |</span>
      <span><i class="fa fa-comment"> <%= @post.post_comments.count %> </i></span>

    <div class="favorite-btn_<%= @post.id %>">
      <%= render 'user/favorites/favorite', post: @post %>
    </div>

    </div>
  <hr>

  <!--コメント機能-->
    <div>
      <% @post.post_comments.each do |post_comment| %>
        <%= link_to user_path(post_comment.user) do %>
        <%= attachment_image_tag post_comment.user, :profile_image, fallback: "no_image.jpg", size: '50x50' %>
          <%= post_comment.user.name %>
        <% end %>
          <%= post_comment.comment %><br>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %>

          <% if post_comment.user == current_user %>
            <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete do %>
              <i class="fas fa-trash-alt" style="color: gray;"></i>
            <% end %>
          <% end %>
         <hr>
       <% end %>
      </div>

      <div>
        <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
          <%= f.text_area :comment, placeholder: "コメント", size: "40" %>
          <%= f.submit "送信", class: "btn btn-success btn-sm" %>
        <% end %>
      </div>




</div>
</div>