<div class="card w-100 mx-auto mt-4 shadow-lg">
    <div class="post-img">
<%= attachment_image_tag @post, :image, :fill, 200, 100 %>
</div>
<div class="card-body">
  <div class="card-title">
<%= @post.title %>
<%= link_to "記事編集", edit_post_path, class: "btn btn-primary btn-sm" %>
<%= link_to "記事削除", post_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm" %>
</div>
<%#= @post.category %>
<div class="card-text">
<%= @post.body %>
</div>
<%= link_to user_path(@user) do %>
<%= attachment_image_tag @post.user, :profile_image, fallback: "no_image.jpg", size: '100x100' %>
<%= @user.name %>
<% end %>
<%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %>投稿
<div>
<p>コメント件数：<%= @post.post_comments.count %></p>
<% @post.post_comments.each do |post_comment| %>
  <!--<p><= image_tag('sample-author1.jpg') %></p>-->
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
<% end %>
</div>
<div>
<%= form_with(model:[@post, @post_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>



</div>
</div>