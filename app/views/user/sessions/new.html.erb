<%= render 'homes/alert' %>
<div class="form">

    <div class="row">
      <div class="col"></div>
        <div class="col">
          <h3 style="margin: 20px;">ログイン</h3>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="field">
        <%= f.label :登録メールアドレス, class: "mt-3 mr-5" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", size: "30" %>
      </div>

      <div class="field">
        <%= f.label :パスワード, class: "mt-3 mr-5" %><br />
        <%= f.password_field :password, autocomplete: "current-password", size: "30" %>
      </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン情報を保持する, class: "mt-3 mr-5" %>
      </div>
    <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
      <% end %>

        <p style="text-align: center; margin: 30px auto;">
          新規会員登録は<%= link_to "こちら", new_user_registration_path %>から
        </p>
      </div>
      <div class="col"></div>
    </div>
  </div>
