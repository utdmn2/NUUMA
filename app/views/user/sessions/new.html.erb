<%= render 'homes/alert' %>
<div class="form">

  <h3 style="text-align: center; margin: 20px;">ログイン</h3>
    <div class="row">
      <div class="col"></div>
      <div class="col">

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

  <div class="field">
    <%= f.label :登録メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<h4>新規会員登録は<%= link_to "こちら", new_user_registration_path %></h4>
