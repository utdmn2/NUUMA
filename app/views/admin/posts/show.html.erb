<div class="container">
<div class="card w-50 mx-auto my-4">
  <div class="card-text m-2">
    <%= link_to admin_user_path(@user), style: "color: black;" do %>
      <%= attachment_image_tag @post.user, :profile_image, fallback: "no_image.jpg", size: '50x50' %>
      <%= @user.name %>
    <% end %>

      <%= link_to "記事削除", admin_post_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-dark btn-sm" %>

  </div>

  <!--投稿画像-->
    <%= attachment_image_tag @post, :image, :fill, 300, 200, class: 'card-img-top rounded', fallback: "no_image.jpg" %>

    <!--投稿本文-->
    <div class="card-body">
      <div class="card-title">
        <h4><%= @post.title %></h4>
      </div>

      <p>カテゴリー:<% @post.categories.each do |category| %>
        <%= category.name %>
      <% end %></p>

      <div class="card-text my-2">
        <%= @post.body %>
      </div>

    <!--投稿日時・コメント数・いいね数-->

    <div style="text-align: right;">
      <span><%= @post.created_at.strftime('%Y/%m/%d') %>  |</span>
      <span>
        <%= @post.post_comments.count %> |
      </span>
      <span>
        ♥ <%= @post.favorites.count %>
      </span>
    </div>

  </div>
</div>
</div>