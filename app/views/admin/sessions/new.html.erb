<%= render 'homes/alert' %>
<div class="form">

  <div class="row">
    <div class="col"></div>
      <div class="col-auto">
        <h3 style="margin: 20px;">管理者ログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を保持 %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-success btn-sm mb-2" %>
  </div>
<% end %>
    </div>
      <div class="col"></div>
    </div>
</div>
