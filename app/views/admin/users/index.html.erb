<div class="row">
    <h3 style="margin: 20px;">登録会員一覧</h3>
     <table class="table">
      <thead>
       <tr>
        <th scope="col">登録ID</th>
        <th scope="col"></th>
        <th scope="col">ニックネーム</th>
        <th scope="col"></th>
        <th scope="col"></th>
       </tr>
     </thead>

     <tbody>

       <% @users.each do |user| %>
       <tr>
        <td><%= user.id %></td>
        <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "30x30" %></td>
        <td><p><%= user.name %></p></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>

        <td><p><%= link_to "詳細",user_path(user.id) %></p></td>
      </tr>
        <% end %>
     </tbody>
    </table>
  </div>
